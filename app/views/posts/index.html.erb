<div class="main">
			<div class="container">
				<div class="row">
					<%= form_for(@new_post) do |f| %>
						<div class="col-md-10 col-xs-8">
							
							<%= f.text_field :comment, :placeholder => "share your thoughts" %>

						</div>
						<div class="col-md-2 col-xs-4">
							<%= f.submit :post, :class => "btn" %>
						</div>
					<% end %>
				</div>

				<ul class="comments" id="comments">
						<% @posts.each do |p| %>
							<li><%= p.comment %></li>
						<% end %>

				</ul>
			</div>
		</div>